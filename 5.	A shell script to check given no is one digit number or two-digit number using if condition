#!/bin/bash

echo "enter the number"
read number

if (( number >= 0 && number <= 9 )); then
    echo "The number is a one-digit number."
elif (( number >= 10 && number <= 99 )); then
    echo "The number is a two-digit number."
else
    echo " number exceed two digit number ."
fi
 
